    "eslint": "^7.28.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.9.1",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.7"
